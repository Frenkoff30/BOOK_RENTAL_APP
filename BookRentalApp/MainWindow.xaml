<Window x:Class="BookRentalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:BookRentalApp.Views"
        Title="Book Rental App" Height="700" Width="1200"
        Background="#0A0A0A"
        WindowStyle="SingleBorderWindow"
        Foreground="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Content -->
        </Grid.ColumnDefinitions>

        <!--LEFT SIDEBAR-->
        <StackPanel Background="#111111" Grid.Column="0"
                    Margin="20"
                    VerticalAlignment="Top">

            <TextBlock Text="📚 Půjčovna knih"
                       FontSize="22"
                       Margin="0 0 0 20"
                       FontWeight="Bold"
                       Foreground="White"/>

            <!-- Neon Buttons -->
            <Button Content="Knihy"
                    Style="{StaticResource NeonButton}"
                    Margin="0 10"
                    Click="Books_Click"/>

            <Button Content="Zákazníci"
                    Style="{StaticResource NeonButton}"
                    Margin="0 10"
                    Click="Customers_Click"/>

            <Button Content="Půjčené knihy"
                    Style="{StaticResource NeonButton}"
                    Margin="0 10"
                    Click="Loans_Click"/>
        </StackPanel>

        <!--CONTENT REGION-->
        <ContentControl x:Name="ContentArea"
                        Grid.Column="1"
                        Margin="20"/>
    </Grid>
</Window>