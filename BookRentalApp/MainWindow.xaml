<Window x:Class="BookRentalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BookRentalApp"
        Title="Book Rental App" Height="550" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e">

    <DockPanel>

        <!-- Left Sidebar -->
        <StackPanel Background="#252526" Width="180" DockPanel.Dock="Left">

            <TextBlock Text="📚 Půjčvona knih"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="15 20 0 30"/>

            <Button Content="Knihy" Name="BooksBtn"
                    Margin="10" Padding="10"
                    Background="#333" Foreground="White"
                    BorderBrush="#444" Click="BooksBtn_Click"/>

            <Button Content="Zákazníci" Name="CustomersBtn"
                    Margin="10" Padding="10"
                    Background="#333" Foreground="White"
                    BorderBrush="#444" Click="CustomersBtn_Click"/>

            <Button Content="Půjčené knihy" Name="LoansBtn"
                    Margin="10" Padding="10"
                    Background="#333" Foreground="White"
                    BorderBrush="#444" Click="LoansBtn_Click"/>

        </StackPanel>

        <!-- Main Content -->
        <ContentControl Name="MainContent" Margin="10"/>
    </DockPanel>
</Window>
