<Window x:Class="BookRentalApp.Views.RentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Půjčit knihu"
        Width="350"
        Height="250"
        WindowStartupLocation="CenterOwner"
        Background="#111"
        Foreground="White">

    <StackPanel Margin="20">

        <TextBlock x:Name="BookTitle"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <TextBlock Text="Zákazník"/>
        <ComboBox x:Name="CustomerBox"
                  DisplayMemberPath="FullName"
                  Height="30"
                  Margin="0 5 0 20"/>

        <Button Content="Půjčit"
                Height="35"
                Click="Confirm_Click"/>
    </StackPanel>
</Window>