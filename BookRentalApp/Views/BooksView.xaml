<UserControl x:Class="BookRentalApp.Views.BooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0A0A0A">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🔹 Nadpis -->
        <TextBlock Text="📚 Knihy"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0 0 0 20"/>

        <!-- 🔹 Tlačítka -->
        <StackPanel Orientation="Horizontal"
                    Margin="0 10 0 20"
                    Grid.Row="1">

            <Button Content="➕ Přidat"
                    Width="150"
                    Margin="0 0 10 0"
                    Style="{StaticResource NeonButton}"
                    Click="AddBook_Click"/>

            <Button Content="✏ Upravit"
                    Width="150"
                    Margin="0 0 10 0"
                    Style="{StaticResource NeonButton}"
                    Click="EditBook_Click"/>

            <Button Content="🗑 Smazat"
                    Width="150"
                    Margin="0 0 10 0"
                    Style="{StaticResource NeonButton}"
                    Click="DeleteBook_Click"/>
            <Button Content="📘 Půjčit"
                    Width="226"
                    Style="{StaticResource NeonButton}"
                    Click="RentBook_Click" Height="54"/>
        </StackPanel>

        <!-- 🔹 Tabulka knih -->
        <DataGrid x:Name="BooksGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  Background="#111"
                  Foreground="Black"
                  RowBackground="#1A1A1A"
                  AlternatingRowBackground="#111"
                  BorderBrush="#00FFFF"
                  BorderThickness="1"
                  FontSize="16"
                  HeadersVisibility="Column" SelectionChanged="BooksGrid_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Název" Binding="{Binding Title}" Width="200"/>
                <DataGridTextColumn Header="Autor" Binding="{Binding Author}" Width="200"/>
                <DataGridTextColumn Header="Rok" Binding="{Binding Year}" Width="80"/>
                <DataGridTextColumn Header="Žánr" Binding="{Binding Genre}" Width="150"/>
                <DataGridCheckBoxColumn Header="Dostupná" Binding="{Binding IsAvailable}" Width="100"/>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</UserControl>
