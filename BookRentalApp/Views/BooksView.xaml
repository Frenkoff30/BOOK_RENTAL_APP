<UserControl x:Class="BookRentalApp.Views.BooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1e1e1e">

    <Grid Margin="10">

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <Button Content="Add Book" Width="120" Margin="0 0 10 0"
                    Background="#3a3a3a" Foreground="White"/>

            <Button Content="Edit" Width="120" Margin="0 0 10 0"
                    Background="#3a3a3a" Foreground="White"/>

            <Button Content="Delete" Width="120"
                    Background="#3a3a3a" Foreground="White"/>
        </StackPanel>

        <DataGrid x:Name="BooksGrid"
                  AutoGenerateColumns="False"
                  Background="#252526"
                  Foreground="White"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#2d2d30"
                  BorderBrush="#3a3a3a"
                  RowHeight="35" Margin="-10,2,10,-2">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="200"/>
                <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="100"/>
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" Width="150"/>
                <DataGridCheckBoxColumn Header="Available" Binding="{Binding IsAvailable}" Width="100"/>
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</UserControl>