<Window x:Class="BookRentalApp.Views.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zákazník"
        Width="350"
        Height="350"
        WindowStartupLocation="CenterOwner"
        Background="#111"
        Foreground="White">

    <StackPanel Margin="20">
        <TextBlock Text="Jméno"/>
        <TextBox x:Name="FirstNameBox" Margin="0 5 0 10"/>

        <TextBlock Text="Příjmení"/>
        <TextBox x:Name="LastNameBox" Margin="0 5 0 10"/>

        <TextBlock Text="Email"/>
        <TextBox x:Name="EmailBox" Margin="0 5 0 10"/>

        <TextBlock Text="Telefon"/>
        <TextBox x:Name="PhoneBox" Margin="0 5 0 20"/>

        <Button Content="Uložit"
                Height="35"
                Click="Save_Click"/>
    </StackPanel>
</Window>
