<Window x:Class="BookRentalApp.Views.BookDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kniha"
        Width="350"
        Height="350"
        WindowStartupLocation="CenterOwner"
        Background="#111"
        Foreground="White">

    <StackPanel Margin="20">
        <TextBlock Text="Název"/>
        <TextBox x:Name="TitleBox" Margin="0 5 0 10"/>

        <TextBlock Text="Autor"/>
        <TextBox x:Name="AuthorBox" Margin="0 5 0 10"/>

        <TextBlock Text="Rok"/>
        <TextBox x:Name="YearBox" Margin="0 5 0 10"/>

        <TextBlock Text="Žánr"/>
        <TextBox x:Name="GenreBox" Margin="0 5 0 20"/>

        <Button Content="Uložit"
                Height="35"
                Click="Save_Click"/>
    </StackPanel>
</Window>
